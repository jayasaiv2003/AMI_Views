<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - AMI</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
          crossorigin="anonymous" />

    <!-- Bootstrap Icons CSS -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        body {
            font-family: Arial, sans-serif;
        }

        /* Sidebar styling */
        .sidebar {
            height: 100vh;
            background-color: #222;
            padding-top: 20px;
            color: white;
        }

            .sidebar a {
                display: flex;
                align-items: center;
                color: #ddd;
                padding: 10px 20px;
                text-decoration: none;
                font-size: 14px;
            }

                .sidebar a:hover {
                    background-color: #444;
                    color: white;
                    text-decoration: none;
                }

            .sidebar .menu-title {
                padding: 10px 20px;
                color: #bbb;
                font-size: 12px;
                text-transform: uppercase;
            }

            /* Sidebar icons styling */
            .sidebar a .bi {
                margin-right: 10px;
                font-size: 16px;
            }

        /* Main content padding */
        .content {
            padding: 20px;
        }

        /* Navbar brand style */
        .navbar-brand {
            font-weight: bold;
            color: white !important;
        }

        /* Custom navbar background color */
        .navbar-custom {
            background-color: #003366; /* Dark navy */
        }

        /* Search input size */
        .search-input {
            width: 300px;
        }
    </style>
</head>
<body>

    <!-- Top Navbar -->
    <nav class="navbar navbar-expand navbar-dark navbar-custom">
        <a class="navbar-brand" href="/">AMI</a>

        <form class="form-inline ml-auto">
            <input class="form-control mr-2 search-input" type="search" placeholder="Search..." aria-label="Search" />
            <button class="btn btn-outline-light" type="submit">Search</button>
        </form>

        <a href="#" id="btnLogout" class="btn btn-danger ml-3 border border-light">Logout</a>

        

    </nav>

    <!-- Container with sidebar and main content -->
    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <nav class="col-md-2 d-none d-md-block sidebar">
                <div class="menu-title">Menu</div>
                <a href="/Home/Meter"><i class="bi bi-speedometer2"></i> Meter</a>
                <a href="/Home/UploadBill"><i class="bi bi-upload"></i> Upload Meter</a>
                <a href="Consumer"><i class="bi bi-people"></i> Consumer</a>
                <a href="/Home/Orgunit"><i class="bi bi-diagram-3"></i> Org Unit</a>
                <a href="/Home/Tariff"><i class="bi bi-currency-dollar"></i> Tariff</a>
                <a href="/Home/TariffSlab"><i class="bi bi-columns-gap"></i> Tariff Slabs</a>
                <a href="/TODRules"><i class="bi bi-clock-history"></i> TOD Rules</a>
                <a href="/Home/Users"><i class="bi bi-person-badge"></i> Users</a>
                <a href="/Home/ConsumerBill"><i class="bi bi-receipt"></i> Consumer Bills</a>
            </nav>

            <!-- Main content -->
            <main role="main" class="col-md-10 content">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- ✅ Scripts (correct order) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script>
        $("#btnLogout").click(function (e) {
            e.preventDefault();
            window.location.href = "/Auth/Login"; // 👈 Redirect here
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
