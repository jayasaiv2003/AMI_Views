<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - AMI Consumer</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .sidebar {
            height: 100vh;
            background-color: #1f2a44;
            padding-top: 20px;
            color: white;
        }

            .sidebar a {
                display: flex;
                align-items: center;
                color: #ddd;
                padding: 10px 20px;
                text-decoration: none;
                font-size: 15px;
            }

                .sidebar a:hover {
                    background-color: #2e3d5c;
                    color: #fff;
                }

            .sidebar .bi {
                margin-right: 10px;
            }

        .navbar-custom {
            background-color: #003366;
        }

        main {
            padding: 20px;
        }
    </style>
</head>
<body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand navbar-dark navbar-custom">
        <a class="navbar-brand" href="/Consumer/Dashboard">AMI Consumer</a>
        <button class="btn btn-danger ml-auto" id="logoutBtn">Logout</button>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 sidebar d-none d-md-block">
                <a href="/Consumer/Dashboard"><i class="bi bi-house"></i> Dashboard</a>
                <a href="/Consumer/Meters"><i class="bi bi-speedometer2"></i> My Meters</a>
                <a href="/Consumer/Bills"><i class="bi bi-receipt"></i> My Bills</a>
                <a href="/Consumer/Tariffs"><i class="bi bi-cash-stack"></i> Tariff</a>
                <a href="/Consumer/TariffSlabs"><i class="bi bi-columns-gap"></i> Tariff Slabs</a>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $("#logoutBtn").click(function () {
            localStorage.clear();
            window.location.href = "/Auth/ConsumerLogin";
        });
    </script>
</body>
</html>
