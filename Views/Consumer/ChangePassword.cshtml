@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 420px; border-radius: 15px;">
        <h3 class="text-center mb-4 text-warning">🔑 Change Password</h3>

        <!-- Old Password -->
        <div class="form-group mb-3">
            <label class="fw-semibold">Old Password</label>
            <input type="password" id="oldPassword" class="form-control" placeholder="Enter old password" />
        </div>

        <!-- New Password -->
        <div class="form-group mb-3">
            <label class="fw-semibold">New Password</label>
            <input type="password" id="newPassword" class="form-control" placeholder="Enter new password" />
        </div>

        <!-- Button -->
        <div class="d-grid mb-3">
            <button id="btnChangePassword" class="btn btn-warning btn-lg">
                <i class="bi bi-shield-lock"></i> Update Password
            </button>
        </div>

        <p id="msg" class="mt-2 text-center fw-bold"></p>

        <p class="text-center mt-3">
            <a href="/Consumer/Dashboard" class="text-primary fw-semibold text-decoration-none">⬅ Back to Dashboard</a>
        </p>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $("#btnChangePassword").click(function () {
        var data = {
            oldPassword: $("#oldPassword").val(),
            newPassword: $("#newPassword").val()
        };

        if (!data.oldPassword || !data.newPassword) {
            $("#msg").text("⚠️ Please fill both fields")
                .addClass("text-danger")
                .removeClass("text-success");
            return;
        }

        $.ajax({
            url: "https://localhost:7071/api/ConsumerAuth/change-password",
            type: "POST",
            contentType: "application/json",
            headers: {
                "Authorization": "Bearer " + localStorage.getItem("jwtToken")
            },
            data: JSON.stringify(data),
            success: function (response) {
                $("#msg")
                    .text("✅ Password changed successfully!")
                    .addClass("text-success")
                    .removeClass("text-danger");

                $("#oldPassword").val("");
                $("#newPassword").val("");
            },
            error: function (xhr) {
                let msg = "❌ Failed to change password";

                if (xhr.responseText)
                    msg = "❌ " + xhr.responseText.replace(/"/g, "");

                $("#msg")
                    .text(msg)
                    .addClass("text-danger")
                    .removeClass("text-success");
            }
        });
    });
</script>
