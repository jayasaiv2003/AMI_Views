@{
    ViewData["Title"] = "Upload Meter Data";
    Layout = "~/Views/Shared/_Layout.cshtml";  // adjust based on your layout
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<div class="container mt-5">
    <h3 class="mb-4 text-primary"><i class="bi bi-upload"></i> Upload Meter Readings (Excel)</h3>

    <div class="card p-4 shadow-sm">
        <form id="uploadForm">
            <div class="mb-3">
                <label for="fileInput" class="form-label">Select Excel File (.xlsx)</label>
                <input class="form-control" type="file" id="fileInput" accept=".xlsx, .xls" required />
            </div>

            <button type="submit" class="btn btn-success" id="uploadBtn">
                <i class="bi bi-cloud-upload"></i> Upload
            </button>
        </form>

        <div class="mt-4">
            <div id="message" class="alert d-none"></div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $("#uploadForm").submit(function (e) {
        e.preventDefault();

        const file = $("#fileInput")[0].files[0];
        if (!file) {
            alert("Please select an Excel file first.");
            return;
        }

        const formData = new FormData();
        formData.append("file", file);

        $("#uploadBtn").prop("disabled", true).text("Uploading...");

        $.ajax({
            url: "https://localhost:7071/api/MeterUpload/upload", // ✅ your API endpoint
            type: "POST",
            data: formData,
            processData: false,
            contentType: false,
            success: function (response) {
                $("#message")
                    .removeClass("d-none alert-danger")
                    .addClass("alert-success")
                    .text(response.message || "Upload successful!");
            },
            error: function (xhr) {
                $("#message")
                    .removeClass("d-none alert-success")
                    .addClass("alert-danger")
                    .text("❌ Error uploading file. Check server logs.");
            },
            complete: function () {
                $("#uploadBtn").prop("disabled", false).text("Upload");
            }
        });
    });
</script>
